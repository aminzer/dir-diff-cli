    "lint": "eslint src/**/*.ts",
    "lint:fix": "npm run lint -- --fix",
    "prepare": "run-s husky:prepare build"
  },
  "dependencies": {
    "@aminzer/dir-diff": "^4.0.12",
    "chalk": "^5.3.0",
